<Window x:Class="SmartHomeUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartHomeUI"
        mc:Ignorable="d"
        Title="Smart Home Hub" 
        Height="900" 
        Width="1600"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen">
    
    <!-- Main container with glassmorphism effect -->
    <Border Style="{StaticResource GlassPanel}" 
            Background="{StaticResource DarkBackground}"
            CornerRadius="0">
        
        <!-- Two-column layout: Sidebar (left) + Content (right) -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ========== LEFT SIDE: NAV BAR ========== -->
            <Border Grid.Column="0" 
                    Background="{StaticResource DarkBackground}"
                    BorderThickness="0,0,1,0"
                    BorderBrush="{StaticResource NeonCyan}"
                    Opacity="0.95">
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Smart Home title (neon glow) -->

                    <!-- Smart Home title (neon glow) -->
                    <StackPanel Grid.Row="1" Margin="25,16,25,30">
                        <TextBlock Text="? Smart Home" 
                                   Style="{StaticResource NeonTitleStyle}"
                                   HorizontalAlignment="Left"/>
                        <TextBlock Text="Control Hub" 
                                   Foreground="{StaticResource TextDimmed}"
                                   FontSize="14"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                    <!-- Neon separator -->
                    <!-- Neon separator -->
                    <Border Grid.Row="2" 
                            Style="{StaticResource NeonSeparator}" 

                            Margin="20,0"/>
                    <!-- Menu items -->

                    <!-- Menu items -->
                    <StackPanel Grid.Row="3" Margin="15,30,15,15">
                        <Button x:Name="btnDashboard"
                                Style="{StaticResource ActiveMenuButtonStyle}"
                                Margin="0,0,0,10"
                                Click="NavigateToDashboard">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE80F;" Style="{StaticResource MenuIconStyle}"/>
                                <TextBlock Text="Dashboard" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Users -->
                        <Button x:Name="btnUsers"
                                Style="{StaticResource MenuButtonStyle}"
                                Margin="0,0,0,10"
                                Click="NavigateToUsers">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE716;" Style="{StaticResource MenuIconStyle}"/>
                                <TextBlock Text="Users" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Devices -->
                        <Button x:Name="btnDevices"
                                Style="{StaticResource MenuButtonStyle}"
                                Margin="0,0,0,10"
                                Click="NavigateToDevices">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE957;" Style="{StaticResource MenuIconStyle}"/>
                                <TextBlock Text="Devices" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Devices > Automations (only when user has devices) -->
                        <Button x:Name="btnAutomations"
                                Style="{StaticResource MenuButtonStyle}"
                                Margin="30,0,0,10"
                                Visibility="Collapsed"
                                Click="NavigateToAutomations">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE90F;" Style="{StaticResource MenuIconStyle}"/>
                                <TextBlock Text="Automations" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Settings -->
                        <Button x:Name="btnSettings"
                                Style="{StaticResource MenuButtonStyle}"
                                Margin="0,0,0,10"
                                Click="NavigateToSettings">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE713;" Style="{StaticResource MenuIconStyle}"/>
                                <TextBlock Text="Settings" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                    </StackPanel>

                </Grid>
            </Border>

            <!-- ========== JOBB OLDAL: TARTALOM (PLACEHOLDER) ========== -->
            <Grid Grid.Column="1">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#0a0a0a" Offset="0"/>
                        <GradientStop Color="#121212" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <!-- Top-right window controls -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,12,12,0">
                    <Button Width="32" Height="24" Padding="0" Style="{StaticResource GlassActionButton}" Click="Minimize_Click">
                        <TextBlock Text="—"
                                   FontSize="16"
                                   FontWeight="Normal"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </Button>
                    <Button Width="32" Height="24" Padding="0" Margin="8,0,0,0" Style="{StaticResource GlassActionButton}" Click="ToggleMaximize_Click">
                        <TextBlock Text="☐"
                                   FontSize="16"
                                   FontWeight="Normal"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </Button>
                    <Button Width="32" Height="24" Padding="0" Margin="8,0,0,0" Style="{StaticResource GlassActionButton}" Click="Close_Click">
                        <TextBlock Text="X"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </Button>
                </StackPanel>

                <!-- Empty placeholder for content -->
                <Grid x:Name="DashboardContent" Margin="30">
                    
                    <!-- Temporary placeholder text -->
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="?? Dashboard Content" 
                                   FontSize="32"
                                   Foreground="{StaticResource NeonCyan}"
                                   HorizontalAlignment="Center"
                                   Effect="{StaticResource NeonGlowEffect}"/>
                        <TextBlock Text="This area is ready for dynamic content" 
                                   FontSize="16"
                                   Foreground="{StaticResource TextDimmed}"
                                   HorizontalAlignment="Center"
                                   Margin="0,15,0,0"/>
                    </StackPanel>

                </Grid>

            </Grid>

        </Grid>
        
    </Border>

</Window>


