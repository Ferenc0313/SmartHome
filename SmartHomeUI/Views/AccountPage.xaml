<UserControl x:Class="SmartHomeUI.Views.AccountPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="600">
    <Border Style="{StaticResource GlassPanel}" Margin="10" Padding="20">
        <StackPanel>
            <TextBlock Text="Account" Style="{StaticResource NeonTitleStyle}"/>
            <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
                <TextBlock Text="Username:" Width="120"/>
                <TextBlock x:Name="UserNameText"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                <TextBlock Text="Email:" Width="120"/>
                <TextBlock x:Name="EmailText"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Button Content="Logout" Style="{StaticResource GlassActionButton}" Width="120" Click="Logout_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
