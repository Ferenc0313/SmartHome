<Window x:Class="SmartHomeUI.Views.AddPhysicalDeviceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:SmartHomeUI.Converters"
        Title="Add Physical Device"
        Height="520"
        Width="780"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Window.Resources>
        <conv:IconKeyToGlyphConverter x:Key="IconKeyToGlyph"/>
        <conv:IconKeyToImageSourceConverter x:Key="IconKeyToImageSource"/>
    </Window.Resources>
    <Border Style="{StaticResource GlassPanel}" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Physical devices from SmartThings"
                       Style="{StaticResource NeonTitleStyle}"/>
            <TextBlock Grid.Row="0"
                       Margin="0,6,0,0"
                       Foreground="{StaticResource TextDimmed}"
                       Text="Válassz egy vagy több eszközt a listából."/>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,12,0,12">
                <ItemsControl ItemsSource="{Binding Devices}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource GlassPanel}" Margin="6" Padding="12" Width="200">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <Grid Width="28" Height="28" Margin="0,0,6,0">
                                            <Image x:Name="PhysicalIconImage"
                                                   Source="{Binding Device.IconKey, Converter={StaticResource IconKeyToImageSource}}"
                                                   Stretch="Uniform"/>
                                            <TextBlock x:Name="PhysicalIconGlyph"
                                                       Text="{Binding Device.IconKey, Converter={StaticResource IconKeyToGlyph}}"
                                                       FontFamily="Segoe MDL2 Assets"
                                                       FontSize="20"
                                                       Foreground="{StaticResource NeonCyan}"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Source, ElementName=PhysicalIconImage}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Grid>
                                        <TextBlock Text="{Binding Device.Name}" FontWeight="SemiBold"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding Device.DeviceType}" Foreground="{StaticResource TextDimmed}" FontSize="12" Margin="0,4,0,0"/>
                                    <CheckBox Content="Kiválaszt"
                                              IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                              Margin="0,8,0,0"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Hozzáadás"
                        Width="120"
                        Style="{StaticResource GlassActionButton}"
                        Margin="0,0,8,0"
                        Click="Add_Click"/>
                <Button Content="Mégse"
                        Width="100"
                        Style="{StaticResource GlassActionButton}"
                        Click="Cancel_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
