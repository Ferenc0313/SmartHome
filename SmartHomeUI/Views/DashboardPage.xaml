<UserControl x:Class="SmartHomeUI.Views.DashboardPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:conv="clr-namespace:SmartHomeUI.Converters"
             xmlns:vm="clr-namespace:SmartHomeUI.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1400">

    <UserControl.Resources>
        <conv:IconKeyToGlyphConverter x:Key="IconKeyToGlyph"/>
        <conv:BoolToTextOnOffConverter x:Key="BoolToTextOnOff"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>

        <Style x:Key="AddWidgetCircleButton" TargetType="Button">
            <Setter Property="Width" Value="72"/>
            <Setter Property="Height" Value="72"/>
            <Setter Property="FontSize" Value="42"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource NeonCyan}"/>
            <Setter Property="Background" Value="#3D00FFFF"/>
            <Setter Property="BorderBrush" Value="{StaticResource NeonCyan}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="{TemplateBinding Background}"
                                     Stroke="{TemplateBinding BorderBrush}"
                                     StrokeThickness="{TemplateBinding BorderThickness}" />
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="0,-8,0,0"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#6600FFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#8800FFFF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.35"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate DataType="{x:Type vm:SecurityWidget}">
            <Border Style="{StaticResource GlassPanel}" Margin="8" Padding="16" MinWidth="300" MinHeight="200">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="{Binding Title}" Foreground="{StaticResource NeonCyan}" FontSize="18" FontWeight="Bold"/>
                    <StackPanel Grid.Row="1" Margin="0,10,0,0">
                        <TextBlock Text="Mode: Home"/>
                        <TextBlock Text="Open: 0 doors, 0 windows" Foreground="{StaticResource TextDimmed}" Margin="0,4,0,0"/>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <Button Content="Arm Away" Style="{StaticResource GlassActionButton}" Width="120"/>
                            <Button Content="Disarm" Style="{StaticResource GlassActionButton}" Width="120" Margin="8,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:EnergyWidget}">
            <Border Style="{StaticResource GlassPanel}" Margin="8" Padding="16" MinWidth="300" MinHeight="200">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="{Binding Title}" Foreground="{StaticResource NeonCyan}" FontSize="18" FontWeight="Bold"/>
                    <StackPanel Grid.Row="1" Margin="0,10,0,0">
                        <TextBlock Text="Today: 7.2 kWh (+12%)"/>
                        <TextBlock Text="Top consumers: Living Room AC, Oven" Foreground="{StaticResource TextDimmed}" Margin="0,4,0,0"/>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <Button Content="Eco Mode" Style="{StaticResource GlassActionButton}" Width="120" Command="{Binding DataContext.ApplyEcoModeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                            <Button Content="Turn off idle lights" Style="{StaticResource GlassActionButton}" Margin="8,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:ClimateWidget}">
            <Border Style="{StaticResource GlassPanel}" Margin="8" Padding="16" MinWidth="300" MinHeight="200">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="{Binding Title}" Foreground="{StaticResource NeonCyan}" FontSize="18" FontWeight="Bold"/>
                    <StackPanel Grid.Row="1" Margin="0,10,0,0">
                        <TextBlock Text="Living Room: 22°C  |  Target: 21°C"/>
                        <TextBlock Text="Humidity: 45%" Foreground="{StaticResource TextDimmed}" Margin="0,4,0,0"/>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <Button Content="Increase" Style="{StaticResource GlassActionButton}" Width="120"/>
                            <Button Content="Decrease" Style="{StaticResource GlassActionButton}" Width="120" Margin="8,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:AddWidgetPlaceholder}">
            <Border Style="{StaticResource GlassPanel}"
                    Margin="8"
                    Padding="16"
                    MinWidth="300"
                    MinHeight="200">
                <Grid>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Button Content="+"
                                Style="{StaticResource AddWidgetCircleButton}"
                                Click="OpenWidgetPicker_Click"
                                IsEnabled="{Binding DataContext.CanAddWidgets, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                        <TextBlock Text="Add widget"
                                   Margin="0,12,0,0"
                                   HorizontalAlignment="Center"
                                   Foreground="{StaticResource TextDimmed}"/>
                        <TextBlock Text="No more widgets available"
                                   Margin="0,6,0,0"
                                   FontSize="12"
                                   HorizontalAlignment="Center"
                                   Foreground="{StaticResource NeonMagenta}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding DataContext.CanAddWidgets, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="False">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1.2*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT: Main content area -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top status bar -->
            <Border Style="{StaticResource GlassPanel}" Margin="10" Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Presence -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="&#xE716;" Style="{StaticResource MenuIconStyle}"/>
                        <StackPanel Margin="10,0,0,0">
                            <TextBlock Text="Presence" Foreground="{StaticResource TextDimmed}" FontSize="12"/>
                            <TextBlock Text="Home: 1 / Away: 0" FontSize="16"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Mode -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBlock Text="&#xE80F;" Style="{StaticResource MenuIconStyle}"/>
                        <StackPanel Margin="10,0,0,0">
                            <TextBlock Text="Mode" Foreground="{StaticResource TextDimmed}" FontSize="12"/>
                            <TextBlock Text="Home" FontSize="16"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Weather -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <TextBlock Text="&#xE706;" Style="{StaticResource MenuIconStyle}"/>
                        <StackPanel Margin="10,0,0,0">
                            <TextBlock Text="Weather" Foreground="{StaticResource TextDimmed}" FontSize="12"/>
                            <TextBlock Text="22 C  |  Partly Cloudy" FontSize="16"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Hub Health -->
                    <StackPanel Grid.Column="3" Orientation="Horizontal">
                        <TextBlock Text="&#xE701;" Style="{StaticResource MenuIconStyle}"/>
                        <StackPanel Margin="10,0,0,0">
                            <TextBlock Text="Hub Health" Foreground="{StaticResource TextDimmed}" FontSize="12"/>
                            <TextBlock Text="All networks OK" FontSize="16"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Quick actions / scenes -->
            <Border Grid.Row="1" Style="{StaticResource GlassPanel}" Margin="10,0,10,10" Padding="14">
                <StackPanel>
                    <TextBlock Text="Quick Actions" Foreground="{StaticResource NeonCyan}" FontWeight="Bold"/>
                    <WrapPanel Margin="0,10,0,0">
                        <Button Style="{StaticResource GlassActionButton}" Content="Away" Width="140" Margin="6,0,6,0"/>
                        <Button Style="{StaticResource GlassActionButton}" Content="Movie" Width="140" Margin="6,0,6,0"/>
                        <Button Style="{StaticResource GlassActionButton}" Content="Sleep" Width="140" Margin="6,0,6,0"/>
                        <Button Style="{StaticResource GlassActionButton}" Content="Eco" Width="140" Margin="6,0,6,0" Command="{Binding ApplyEcoModeCommand}"/>
                    </WrapPanel>
                </StackPanel>
            </Border>

            <!-- Widgets and devices -->
            <Grid Grid.Row="2" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12" VerticalAlignment="Center">
                    <TextBlock Text="Dashboard widgets" Foreground="{StaticResource NeonCyan}" FontSize="18" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Widgets.Count, StringFormat=' ({0})'}" Foreground="{StaticResource TextDimmed}" Margin="12,2,0,0"/>
                </StackPanel>

                <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding WidgetTiles}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Devices Card -->
                <Border Grid.Row="2" Style="{StaticResource GlassPanel}" Margin="0,20,0,0" Padding="16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Devices" Foreground="{StaticResource NeonCyan}" FontSize="18" FontWeight="Bold"/>
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,8">
                            <TextBlock Text="Total:"/>
                            <TextBlock Text=" "/>
                            <TextBlock Text="{Binding DeviceCount}"/>
                            <TextBlock Text="    On:" Margin="16,0,0,0"/>
                            <TextBlock Text="{Binding OnCount}"/>
                            <TextBlock Text="    Offline:" Margin="16,0,0,0"/>
                            <TextBlock Text="{Binding OfflineCount}"/>
                            <TextBlock Text="    Low battery:" Margin="16,0,0,0"/>
                            <TextBlock Text="{Binding LowBatteryCount}"/>
                        </StackPanel>
                        <ScrollViewer Grid.Row="2"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled"
                                      Loaded="DeviceListScroll_Loaded"
                                      PreviewMouseWheel="TilesScroll_PreviewMouseWheel">
                            <ScrollViewer.Resources>
                                <Style TargetType="ScrollBar">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ScrollBar">
                                                <Grid Background="Transparent">
                                                    <Track x:Name="PART_Track"
                                                           IsDirectionReversed="True">
                                                        <Track.DecreaseRepeatButton>
                                                            <RepeatButton Command="ScrollBar.LineUpCommand" Opacity="0"/>
                                                        </Track.DecreaseRepeatButton>
                                                        <Track.IncreaseRepeatButton>
                                                            <RepeatButton Command="ScrollBar.LineDownCommand" Opacity="0"/>
                                                        </Track.IncreaseRepeatButton>
                                                        <Track.Thumb>
                                                            <Thumb Background="{StaticResource NeonCyan}" Width="6">
                                                                <Thumb.Template>
                                                                    <ControlTemplate>
                                                                        <Border Background="{TemplateBinding Background}" CornerRadius="3"/>
                                                                    </ControlTemplate>
                                                                </Thumb.Template>
                                                            </Thumb>
                                                        </Track.Thumb>
                                                    </Track>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ScrollViewer.Resources>
                            <ItemsControl ItemsSource="{Binding Devices}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
    <DataTemplate>
        <Border Margin="6"
                Padding="12"
                MinWidth="170"
                MinHeight="190"
                CornerRadius="16"
                BorderThickness="1"
                BorderBrush="#2200FFFF">
            <Grid Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="36"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0"
                      HorizontalAlignment="Right"
                      Width="36">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Ellipse Grid.Row="0"
                             Width="10"
                             Height="10"
                             HorizontalAlignment="Center">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="{StaticResource TextDimmed}"/>
                                <Setter Property="Stroke" Value="{StaticResource TextDimmed}"/>
                                <Setter Property="StrokeThickness" Value="1"/>
                                <Setter Property="Opacity" Value="0.4"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsOn}" Value="True">
                                        <Setter Property="Fill" Value="{StaticResource NeonCyan}"/>
                                        <Setter Property="Stroke" Value="{StaticResource NeonCyan}"/>
                                        <Setter Property="Opacity" Value="1"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock Grid.Row="1"
                               Margin="0,6,0,0"
                               HorizontalAlignment="Center"
                               FontSize="12"
                               Text="{Binding IsOn, Converter={StaticResource BoolToTextOnOff}}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="{StaticResource TextDimmed}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsOn}" Value="True">
                                        <Setter Property="Foreground" Value="{StaticResource NeonCyan}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <Button Grid.Row="1"
                        Style="{StaticResource DeviceTileButton}"
                        Click="DeviceTile_Click">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Viewbox Grid.Row="0"
                                 Stretch="Uniform"
                                 Height="52"
                                 Width="52"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center">
                            <TextBlock Text="{Binding IconKey, Converter={StaticResource IconKeyToGlyph}}"
                                       FontFamily="Segoe MDL2 Assets"
                                       Foreground="{StaticResource NeonCyan}"/>
                        </Viewbox>

                        <TextBlock Grid.Row="1"
                                   Text="{Binding Name}"
                                   HorizontalAlignment="Center"
                                   Margin="0,10,0,0"
                                   FontWeight="SemiBold"/>

                        <TextBlock Grid.Row="2"
                                   Text="{Binding Room}"
                                   HorizontalAlignment="Center"
                                   Foreground="{StaticResource TextDimmed}"
                                   FontSize="12"
                                   Margin="0,6,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </Trigger>
                                        <Trigger Property="Text" Value="">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Button>

                <Slider Grid.Row="2"
                        x:Name="ValueSlider"
                        Margin="0,12,0,0"
                        Minimum="0" Maximum="100"
                        Tag="{Binding}"
                        Value="{Binding Value}"
                        ValueChanged="ValueSlider_ValueChanged"
                        Height="24"
                        Visibility="Hidden"/>
            </Grid>
        </Border>
        <DataTemplate.Triggers>
            <DataTrigger Binding="{Binding Type}" Value="Light">
                <Setter TargetName="ValueSlider" Property="Visibility" Value="Visible"/>
                <Setter TargetName="ValueSlider" Property="Minimum" Value="0"/>
                <Setter TargetName="ValueSlider" Property="Maximum" Value="100"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding Type}" Value="Speaker">
                <Setter TargetName="ValueSlider" Property="Visibility" Value="Visible"/>
                <Setter TargetName="ValueSlider" Property="Minimum" Value="0"/>
                <Setter TargetName="ValueSlider" Property="Maximum" Value="100"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding Type}" Value="Thermostat">
                <Setter TargetName="ValueSlider" Property="Visibility" Value="Visible"/>
                <Setter TargetName="ValueSlider" Property="Minimum" Value="16"/>
                <Setter TargetName="ValueSlider" Property="Maximum" Value="28"/>
            </DataTrigger>
        </DataTemplate.Triggers>

    </DataTemplate>
</ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <Border Grid.RowSpan="3"
                        Background="#AA020202"
                        Visibility="{Binding IsWidgetPickerOpen, Converter={StaticResource BoolToVisibility}}"
                        Panel.ZIndex="5">
                    <Border Style="{StaticResource GlassPanel}" Padding="20" Width="520" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Close button - jobb felső sarok -->
                            <Button Width="32"
                                    Height="32"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Margin="0,-8,-8,0"
                                    Style="{StaticResource GlassActionButton}"
                                    Click="CloseWidgetPicker_Click"
                                    Panel.ZIndex="10"
                                    ToolTip="Close">
                                <TextBlock Text="X"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"/>
                            </Button>

                            <TextBlock Grid.Row="0"
                                       Text="Add widget"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource NeonCyan}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,0,12"/>

                            <ItemsControl Grid.Row="1" ItemsSource="{Binding WidgetOptions}" Margin="0,12,0,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource GlassPanel}" Margin="0,8,0,0" Padding="12">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Title}" FontSize="16" FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding Description}" Foreground="{StaticResource TextDimmed}" Margin="0,6,0,0"/>
                                                    <TextBlock Text="{Binding Requirement}" Foreground="{StaticResource TextDimmed}" FontSize="12" Margin="0,6,0,0"/>
                                                    <TextBlock Text="Already on dashboard" Foreground="{StaticResource NeonCyan}" FontSize="12" Margin="0,6,0,0">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                    <TextBlock Text="Requires compatible devices"
                                                               Foreground="{StaticResource NeonMagenta}"
                                                               FontSize="12"
                                                               Margin="0,6,0,0">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsAvailable}" Value="False">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </StackPanel>
                                                <Button Grid.Column="1"
                                                        Content="Add"
                                                        Style="{StaticResource GlassActionButton}"
                                                        Width="100"
                                                        VerticalAlignment="Center"
                                                        Click="WidgetOption_Click"
                                                        IsEnabled="{Binding IsEnabled}"
                                                        Margin="12,0,0,0"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Border>
                </Border>
            </Grid>
        </Grid>

        <!-- RIGHT: Activity feed -->
        <Border Grid.Column="1" Style="{StaticResource GlassPanel}" Margin="0,10,10,10" Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Activity" Foreground="{StaticResource NeonCyan}" FontSize="18" FontWeight="Bold"/>
                <ListView Grid.Row="1" Background="Transparent" BorderThickness="0" Margin="0,8,0,0" ItemsSource="{Binding Activity}">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0,4,0,4"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{Binding Time}" Foreground="{StaticResource TextDimmed}"/>
                                <TextBlock Grid.Column="1" Text="{Binding Message}"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>

    </Grid>
</UserControl>






