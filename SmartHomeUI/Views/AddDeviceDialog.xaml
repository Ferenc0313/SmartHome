<Window x:Class="SmartHomeUI.Views.AddDeviceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:SmartHomeUI.Converters"
        Title="Assign Device"
        Height="520"
        Width="780"
        WindowStartupLocation="CenterOwner"
        Style="{StaticResource DialogWindowStyle}">
    <Window.Resources>
        <conv:IconKeyToGlyphConverter x:Key="IconKeyToGlyph"/>
        <conv:IconKeyToImageSourceConverter x:Key="IconKeyToImageSource"/>
        <conv:NotNullToVisibilityConverter x:Key="NotNullToVisibility"/>
    </Window.Resources>
    <Border Style="{StaticResource GlassPanel}"
            Padding="18"
            Margin="8"
            Background="{StaticResource DialogBackdrop}"
            BorderThickness="2"
            Effect="{StaticResource DialogGlow}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Background="{StaticResource DialogTitleBarBrush}"
                    CornerRadius="10,10,0,0"
                    Padding="10,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <DockPanel LastChildFill="False">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Source="pack://application:,,,/SmartHomeUI;component/Assets/Icons/Main_Icon.png"
                               Width="18"
                               Height="18"
                               Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                    <Button DockPanel.Dock="Right"
                            Width="32"
                            Height="24"
                            Padding="0"
                            Margin="8,0,0,0"
                            Style="{StaticResource GlassActionButton}"
                            Click="Close_Click">
                        <TextBlock Text="X"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </Button>
                </DockPanel>
            </Border>

            <Border Grid.Row="1"
                    Padding="14"
                    CornerRadius="10"
                    Background="{StaticResource DialogHeaderBrush}"
                    BorderBrush="{StaticResource NeonCyan}"
                    BorderThickness="0,0,0,2">
                <DockPanel>
                    <Border Width="10"
                            Height="36"
                            CornerRadius="6"
                            Background="{StaticResource NeonCyan}"
                            VerticalAlignment="Center"
                            Opacity="0.7"
                            Margin="0,0,12,0"/>
                    <StackPanel>
                        <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}"
                                   Style="{StaticResource NeonTitleStyle}"
                                   FontSize="26"/>
                        <TextBlock Text="Select a device to assign"
                                   Foreground="{StaticResource TextDimmed}"
                                   FontSize="12"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </DockPanel>
            </Border>

            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="0,12,0,12">
                <ItemsControl x:Name="DevicesList">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Click="DeviceSelect_Click"
                                    Margin="8"
                                    Padding="16"
                                    Style="{StaticResource GlassActionButton}"
                                    Tag="{Binding}">
                                <StackPanel Width="150" Height="120" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Grid Width="44" Height="44" HorizontalAlignment="Center">
                                        <Image x:Name="OptionIconImageSource"
                                               Width="40"
                                               Height="40"
                                               Visibility="Collapsed"
                                               Source="{Binding IconKey, Converter={StaticResource IconKeyToImageSource}}"/>
                                        <Border x:Name="OptionIconMask"
                                                Width="40"
                                                Height="40"
                                                Background="{StaticResource NeonCyan}"
                                                Visibility="{Binding ElementName=OptionIconImageSource, Path=Source, Converter={StaticResource NotNullToVisibility}}">
                                            <Border.OpacityMask>
                                                <ImageBrush ImageSource="{Binding ElementName=OptionIconImageSource, Path=Source}"
                                                            Stretch="Uniform"/>
                                            </Border.OpacityMask>
                                        </Border>
                                        <TextBlock x:Name="OptionIconGlyph"
                                                   Text="{Binding IconKey, Converter={StaticResource IconKeyToGlyph}}"
                                                   FontFamily="Segoe MDL2 Assets"
                                                   FontSize="36"
                                                   Foreground="{StaticResource NeonCyan}"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Visibility="{Binding ElementName=OptionIconImageSource, Path=Source, Converter={StaticResource NotNullToVisibility}, ConverterParameter=Invert}"/>
                                    </Grid>
                                    <TextBlock Text="{Binding Name}" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Close" Width="100" Style="{StaticResource GlassActionButton}" Click="Close_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
