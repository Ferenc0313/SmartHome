<Window x:Class="SmartHomeUI.Views.AddDeviceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Assign Device" Height="520" Width="780"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Border Style="{StaticResource GlassPanel}" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Select a device to assign"
                       Style="{StaticResource NeonTitleStyle}"/>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,16,0,16">
                <ItemsControl x:Name="DevicesList">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Click="DeviceSelect_Click"
                                    Margin="8"
                                    Padding="16"
                                    Style="{StaticResource GlassActionButton}"
                                    Tag="{Binding}">
                                <StackPanel Width="150" Height="120" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Glyph}" FontFamily="Segoe MDL2 Assets" FontSize="36" Foreground="{StaticResource NeonCyan}" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding Name}" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Close" Width="100" Style="{StaticResource GlassActionButton}" Click="Close_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

