<UserControl x:Class="SmartHomeUI.Views.DevicesPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:SmartHomeUI.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900">
    <UserControl.Resources>
        <conv:IconKeyToGlyphConverter x:Key="IconKeyToGlyph"/>
        <conv:IconKeyToImageSourceConverter x:Key="IconKeyToImageSource"/>
        <conv:NotNullToVisibilityConverter x:Key="NotNullToVisibility"/>
    </UserControl.Resources>

    <Border Style="{StaticResource GlassPanel}" Margin="10" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Devices" Style="{StaticResource NeonTitleStyle}"/>

            <!-- Filters -->
            <Grid Grid.Row="1" Margin="0,16,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="Add Virtual Device" Width="140" Style="{StaticResource GlassActionButton}" Click="AddDevice_Click"/>
                <Button Grid.Column="1" Content="Add Physical Device" Width="140" Margin="10,0,0,0" Style="{StaticResource GlassActionButton}" Click="AddPhysical_Click"/>
                <TextBox Grid.Column="3" x:Name="SearchBox" Style="{StaticResource GlassTextBox}" ToolTip="Search by name" TextChanged="SearchBox_TextChanged"/>
            </Grid>

            <!-- List + Details -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="360"/>
                </Grid.ColumnDefinitions>

                <ListView Grid.Column="0" x:Name="List" Background="Transparent" BorderThickness="0" ScrollViewer.VerticalScrollBarVisibility="Auto" HorizontalContentAlignment="Stretch">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0" Width="32" HorizontalAlignment="Center">
                                    <Image x:Name="DeviceIconImageSource"
                                           Width="24"
                                           Height="24"
                                           Visibility="Collapsed"
                                           Source="{Binding DisplayIconKey, Converter={StaticResource IconKeyToImageSource}}"/>
                                    <Border x:Name="DeviceIconMask"
                                            Width="24"
                                            Height="24"
                                            Background="{StaticResource NeonCyan}"
                                            Visibility="{Binding ElementName=DeviceIconImageSource, Path=Source, Converter={StaticResource NotNullToVisibility}}">
                                        <Border.OpacityMask>
                                            <ImageBrush ImageSource="{Binding ElementName=DeviceIconImageSource, Path=Source}"
                                                        Stretch="Uniform"/>
                                        </Border.OpacityMask>
                                    </Border>
                                    <TextBlock x:Name="DeviceIconGlyph"
                                               Text="{Binding DisplayIconKey, Converter={StaticResource IconKeyToGlyph}}"
                                               FontFamily="Segoe MDL2 Assets"
                                               FontSize="20"
                                               Foreground="{StaticResource NeonCyan}"
                                               VerticalAlignment="Center"
                                               Visibility="{Binding ElementName=DeviceIconImageSource, Path=Source, Converter={StaticResource NotNullToVisibility}, ConverterParameter=Invert}"/>
                                </Grid>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding Name}"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Type}" Foreground="{StaticResource TextDimmed}" FontSize="12"/>
                                        <TextBlock Text=" | " Foreground="{StaticResource TextDimmed}" FontSize="12"/>
                                        <TextBlock Text="{Binding Room}" Foreground="{StaticResource TextDimmed}" FontSize="12"/>
                                    </StackPanel>
                                </StackPanel>
                                <Ellipse Grid.Column="2"
                                         Width="14"
                                         Height="14"
                                         VerticalAlignment="Center"
                                         Margin="10,0,10,0">
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Setter Property="Fill" Value="#5A6570"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsOn}" Value="True">
                                                    <Setter Property="Fill" Value="#24D37F"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                    <Ellipse.ToolTip>
                                        <TextBlock Text="Offline">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsOn}" Value="True">
                                                            <Setter Property="Text" Value="Online"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Ellipse.ToolTip>
                                </Ellipse>
                                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Content="Toggle" Style="{StaticResource GlassActionButton}" Tag="{Binding}" Click="Toggle_Click" Padding="10,2"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.Style>
                        <Style TargetType="ListView">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListView">
                                        <Grid>
                                            <ItemsPresenter/>
                                            <TextBlock Text="No devices yet. Click 'Add Virtual Device' to create one." Foreground="{StaticResource TextDimmed}" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Hidden" x:Name="EmptyHint"/>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="HasItems" Value="False">
                                                <Setter TargetName="EmptyHint" Property="Visibility" Value="Visible"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.Style>
                </ListView>

                <Border Grid.Column="1" Margin="12,0,0,0" Padding="12">
                    <Border.Style>
                        <Style TargetType="Border" BasedOn="{StaticResource GlassPanel}">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=List, Path=SelectedItem}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel>
                        <TextBlock Text="Details" Foreground="{StaticResource NeonCyan}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="Name:" Width="120"/>
                            <TextBlock Text="{Binding ElementName=List, Path=SelectedItem.Name}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                            <TextBlock Text="Type:" Width="120"/>
                            <TextBlock Text="{Binding ElementName=List, Path=SelectedItem.Type}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                            <TextBlock Text="Room:" Width="120"/>
                            <TextBox x:Name="RoomEdit"
                                     Width="180"
                                     Style="{StaticResource GlassTextBox}"
                                     MaxLength="25"
                                     Text="{Binding ElementName=List, Path=SelectedItem.Room, Mode=TwoWay}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                            <TextBlock Text="Favorite:" Width="120"/>
                            <CheckBox x:Name="FavoriteEdit" IsChecked="{Binding ElementName=List, Path=SelectedItem.Favorite, Mode=TwoWay}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <Button Content="Save" Width="120" Style="{StaticResource GlassActionButton}" Click="SaveDetails_Click"/>
                            <Button Content="Delete" Width="120" Margin="10,0,0,0" Style="{StaticResource GlassActionButton}" Click="DeleteSelected_Click"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button x:Name="ConfigureMcuButton"
                                    Content="Configure MCU"
                                    Width="140"
                                    Click="ConfigureMcu_Click">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource GlassActionButton}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=List, Path=SelectedItem.Type}" Value="SprinklerMcu">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ElementName=List, Path=SelectedItem.Type}" Value="CoSafetyMcu">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>
