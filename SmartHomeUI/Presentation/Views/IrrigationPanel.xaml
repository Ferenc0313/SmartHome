<UserControl x:Class="SmartHomeUI.Presentation.Views.IrrigationPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:conv="clr-namespace:SmartHomeUI.Converters"
             xmlns:behaviors="clr-namespace:SmartHomeUI.Presentation.Behaviors"
             mc:Ignorable="d"
             d:DesignHeight="260"
             d:DesignWidth="1200">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <conv:BoolToTextConverter x:Key="BoolToText"/>
    </UserControl.Resources>
    <Border Style="{StaticResource GlassPanel}" Padding="16" Background="#101922">
        <Expander behaviors:PersistedExpander.Key="IrrigationPanel"
                  behaviors:PersistedExpander.DefaultExpanded="True"
                  Background="Transparent"
                  BorderThickness="0">
            <Expander.Header>
                <DockPanel>
                    <StackPanel Orientation="Horizontal">
                        <Border Width="6"
                                Height="32"
                                CornerRadius="4"
                                Background="{StaticResource NeonCyan}"
                                Opacity="0.7"/>
                        <StackPanel Margin="12,0,0,0">
                            <TextBlock Text="Virtual Irrigation"
                                       Foreground="{StaticResource NeonCyan}"
                                       FontSize="18"
                                       FontWeight="Bold"/>
                            <TextBlock Text="Realtime snapshot of the simulated sprinkler MCU"
                                       Foreground="{StaticResource TextDimmed}"
                                       FontSize="12"/>
                        </StackPanel>
                        <Ellipse Width="14" Height="14" Margin="14,0,0,0">
                            <Ellipse.Style>
                                <Style TargetType="Ellipse">
                                    <Setter Property="Fill" Value="#24D37F"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsReady}" Value="False">
                                            <Setter Property="Fill" Value="#5A6570"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Ellipse.Style>
                            <Ellipse.ToolTip>
                                <TextBlock Text="{Binding IsReady, Converter={StaticResource BoolToText}, ConverterParameter='Online|Offline'}"/>
                            </Ellipse.ToolTip>
                        </Ellipse>
                    </StackPanel>
                    <TextBlock x:Name="IrrChevron"
                               Text="▼"
                               Foreground="{StaticResource NeonCyan}"
                               FontSize="14"
                               FontWeight="Bold"
                               HorizontalAlignment="Right"
                               DockPanel.Dock="Right">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="▼"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsExpanded, RelativeSource={RelativeSource AncestorType=Expander}}" Value="False">
                                        <Setter Property="Text" Value="▲"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </DockPanel>
            </Expander.Header>
            <Expander.Content>
                <StackPanel Margin="0,12,0,0">
                    <TextBlock Text="{Binding Status}"
                               Foreground="{StaticResource NeonMagenta}"
                               FontSize="12"
                               Margin="0,0,0,10">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsReady}" Value="False">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.4*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Live readings" Foreground="{StaticResource NeonCyan}" />
                        <StackPanel Margin="0,6,0,0">
                            <TextBlock Text="Soil moisture" Foreground="{StaticResource TextDimmed}" FontSize="12"/>
                            <ProgressBar Minimum="0"
                                         Maximum="100"
                                         Value="{Binding SoilMoisture, Mode=OneWay}"
                                         Height="10"
                                         Background="#0D00FFFF"
                                         BorderBrush="{StaticResource NeonCyan}"
                                         BorderThickness="1"/>
                            <TextBlock Text="{Binding SoilMoisture, StringFormat={}{0:F0}%}"
                                       FontWeight="SemiBold"
                                       Margin="0,4,0,0"/>
                        </StackPanel>

                        <StackPanel Margin="0,10,0,0">
                            <TextBlock Text="Rain level" Foreground="{StaticResource TextDimmed}" FontSize="12"/>
                            <ProgressBar Minimum="0"
                                         Maximum="100"
                                         Value="{Binding RainLevel, Mode=OneWay}"
                                         Height="10"
                                         Background="#0DFF00FF"
                                         BorderBrush="{StaticResource NeonMagenta}"
                                         BorderThickness="1"/>
                            <TextBlock Text="{Binding RainLevel, StringFormat={}{0:F0}%}"
                                       FontWeight="SemiBold"
                                       Margin="0,4,0,0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                            <TextBlock Text="Temperature" Width="140" />
                            <TextBlock Text="{Binding TemperatureC, StringFormat={}{0:F1} °C, Mode=OneWay}"
                                       FontWeight="SemiBold"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBlock Text="Watering" Width="140"/>
                            <TextBlock Text="{Binding IsWatering, Converter={StaticResource BoolToText}, ConverterParameter='Active|Idle', Mode=OneWay}"
                                       FontWeight="SemiBold"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBlock Text="Valve" Width="140"/>
                            <TextBlock Text="{Binding ValveOpen, Converter={StaticResource BoolToText}, ConverterParameter='Open|Closed', Mode=OneWay}"
                                       FontWeight="SemiBold"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBlock Text="Rain lock" Width="140"/>
                            <TextBlock Text="{Binding RainLocked, Converter={StaticResource BoolToText}, ConverterParameter='Locked|Free', Mode=OneWay}"
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                    </StackPanel>

                    <Border Grid.Column="1" Padding="12" Style="{StaticResource GlassPanel}">
                        <StackPanel>
                            <TextBlock Text="Controller targets" Foreground="{StaticResource NeonCyan}" />
                            <TextBlock Text="{Binding MoistureThreshold, StringFormat=Moisture target: {0:F0}%}"
                                       Margin="0,6,0,0"/>
                            <TextBlock Text="{Binding RainLockThreshold, StringFormat=Rain lock above: {0:F0}%}"
                                       Margin="0,2,0,0"/>
                            <TextBlock Text="{Binding MaxWaterMinutes, StringFormat=Max watering: {0:F0} min}"
                                       Margin="0,2,0,0"/>
                            <TextBlock Text="{Binding CooldownMinutes, StringFormat=Cooldown: {0:F0} min}"
                                       Margin="0,2,0,0"/>

                            <TextBlock Text="Latest log" Foreground="{StaticResource TextDimmed}" FontSize="12" Margin="0,12,0,4"/>
                            <ListBox ItemsSource="{Binding LogEntries}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     MaxHeight="120">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Time, StringFormat={}{0:HH:mm:ss}}"
                                                       Foreground="{StaticResource TextDimmed}"
                                                       FontSize="11"/>
                                            <TextBlock Text="{Binding Message}" TextWrapping="Wrap" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Border>

                </Grid>
                </StackPanel>
            </Expander.Content>
            <Expander.Style>
                <Style TargetType="Expander">
                    <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Expander">
                                <DockPanel>
                                    <ToggleButton x:Name="HeaderSite"
                                                  Content="{TemplateBinding Header}"
                                                  IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource TemplatedParent}}"
                                                  Foreground="{TemplateBinding Foreground}"
                                                  Background="Transparent"
                                                  BorderThickness="0"
                                                  Padding="0"
                                                  HorizontalContentAlignment="Stretch"
                                                  OverridesDefaultStyle="True">
                                        <ToggleButton.Template>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <ContentPresenter ContentSource="Content"
                                                                  HorizontalAlignment="Stretch"
                                                                  VerticalAlignment="Center"/>
                                            </ControlTemplate>
                                        </ToggleButton.Template>
                                    </ToggleButton>
                                    <ContentPresenter x:Name="ContentSite"
                                                      DockPanel.Dock="Bottom"
                                                      Focusable="False"
                                                      Visibility="Collapsed"
                                                      ContentSource="Content"/>
                                </DockPanel>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsExpanded" Value="True">
                                        <Setter TargetName="ContentSite" Property="Visibility" Value="Visible"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Expander.Style>
        </Expander>
    </Border>
</UserControl>
