<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Neon színek -->
    <SolidColorBrush x:Key="NeonCyan" Color="#00FFFF"/>
    <SolidColorBrush x:Key="NeonMagenta" Color="#FF00FF"/>
    <SolidColorBrush x:Key="NeonBlue" Color="#0080FF"/>
    <SolidColorBrush x:Key="DarkBackground" Color="#0a0a0a"/>
    <SolidColorBrush x:Key="ContentBackground" Color="#121212"/>
    <!-- Increase overall text contrast -->
    <SolidColorBrush x:Key="TextWhite" Color="#F2F2F2"/>
    <SolidColorBrush x:Key="TextDimmed" Color="#B0B0B0"/>

    <!-- Alapértelmezett TextBlock stílus -->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
        <Setter Property="FontFamily" Value="Segoe UI Semibold"/>
    </Style>

    <!-- Neon cím stílus (Smart Home header) -->
    <Style x:Key="NeonTitleStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource NeonCyan}"/>
        <Setter Property="FontFamily" Value="Segoe UI Semibold"/>
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#00FFFF" 
                                  BlurRadius="20" 
                                  ShadowDepth="0" 
                                  Opacity="0.8"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Menü gomb stílus -->
    <Style x:Key="MenuButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="20,15"/>
        <Setter Property="FontFamily" Value="Segoe UI Semibold"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#00FFFF" Opacity="0.1"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource NeonCyan}"/>
                            <Setter TargetName="border" Property="BorderThickness" Value="1"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#00FFFF" Opacity="0.2"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Aktív menü gomb stílus (kiválasztott menüpont) -->
    <Style x:Key="ActiveMenuButtonStyle" TargetType="Button" BasedOn="{StaticResource MenuButtonStyle}">
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="#00FFFF" Opacity="0.15"/>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="{StaticResource NeonCyan}"/>
        <Setter Property="BorderThickness" Value="2,0,0,0"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#00FFFF" 
                                  BlurRadius="15" 
                                  ShadowDepth="0" 
                                  Opacity="0.5"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Glassmorphism Border stílus -->
    <Style x:Key="GlassPanel" TargetType="Border">
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="#1a1a1a" Opacity="0.9"/>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="{StaticResource NeonCyan}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#00FFFF" 
                                  BlurRadius="10" 
                                  ShadowDepth="0" 
                                  Opacity="0.3"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Neon elválasztó vonal -->
    <Style x:Key="NeonSeparator" TargetType="Border">
        <Setter Property="Height" Value="1"/>
        <Setter Property="Background" Value="{StaticResource NeonCyan}"/>
        <Setter Property="Opacity" Value="0.3"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#00FFFF" 
                                  BlurRadius="8" 
                                  ShadowDepth="0" 
                                  Opacity="0.6"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Menü ikon TextBlock stílus (Segoe MDL2 Assets) -->
    <Style x:Key="MenuIconStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Foreground" Value="{StaticResource NeonCyan}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,15,0"/>
    </Style>

    <!-- Shared drop shadow effect for headings/placeholders -->
    <DropShadowEffect x:Key="NeonGlowEffect"
                      Color="#00FFFF"
                      BlurRadius="20"
                      ShadowDepth="0"
                      Opacity="0.8"/>

    

    <!-- Glass TextBox for input fields -->
    <Style x:Key="GlassTextBox" TargetType="TextBox">
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="#1a1a1a" Opacity="0.85"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
        <Setter Property="BorderBrush" Value="{StaticResource NeonCyan}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Effect" Value="{StaticResource NeonGlowEffect}"/>
    </Style>

    <!-- Glass ComboBox with better contrast in dropdowns -->
    <Style TargetType="ComboBox">
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="#1a1a1a" Opacity="0.85"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
        <Setter Property="BorderBrush" Value="{StaticResource NeonCyan}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Effect" Value="{StaticResource NeonGlowEffect}"/>
        <Setter Property="Padding" Value="6,4"/>
        <Setter Property="ItemContainerStyle">
            <Setter.Value>
                <Style TargetType="ComboBoxItem">
                    <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Padding" Value="8,4"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#00FFFF" Opacity="0.15"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#00FFFF" Opacity="0.22"/>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Glass Action Button with neon glow -->
    <Style x:Key="GlassActionButton" TargetType="Button">
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="#00FFFF" Opacity="0.15"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
        <Setter Property="BorderBrush" Value="{StaticResource NeonCyan}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Effect" Value="{StaticResource NeonGlowEffect}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#00FFFF" Opacity="0.25"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#00FFFF" Opacity="0.35"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
</Style>

    <!-- Device tile button look for dialog (after base style) -->
    <Style x:Key="DeviceTileButton" TargetType="Button" BasedOn="{StaticResource GlassActionButton}">
        <Setter Property="Width" Value="170"/>
        <Setter Property="Height" Value="130"/>
        <Setter Property="Effect" Value="{StaticResource NeonGlowEffect}"/>
    </Style>

    <!-- Input label style: slightly higher, more gray for readability -->
    <SolidColorBrush x:Key="InputLabelBrush" Color="#C6CED2"/>
    <Style x:Key="InputLabelText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource InputLabelBrush}"/>
        <Setter Property="FontSize" Value="12"/>
        <!-- Move a bit up and add spacing from the glowing border below -->
        <Setter Property="Margin" Value="0,-2,0,8"/>
    </Style>

    <!-- Glass PasswordBox -->
    <Style x:Key="GlassPasswordBox" TargetType="PasswordBox">
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="#1a1a1a" Opacity="0.85"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
        <Setter Property="BorderBrush" Value="{StaticResource NeonCyan}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Effect" Value="{StaticResource NeonGlowEffect}"/>
    </Style>

    <!-- Neon Scrollbars -->
    <Style TargetType="ScrollBar">
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="#101010" Opacity="0.6"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Width" Value="10"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ScrollBar">
                    <Grid SnapsToDevicePixels="True" Background="Transparent">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Opacity="0.2"/>
                        <Track x:Name="PART_Track"
                               Orientation="{TemplateBinding Orientation}"
                               IsDirectionReversed="{Binding IsDirectionReversed, RelativeSource={RelativeSource TemplatedParent}}">
                            <Track.DecreaseRepeatButton>
                                <RepeatButton Visibility="Collapsed"/>
                            </Track.DecreaseRepeatButton>
                            <Track.IncreaseRepeatButton>
                                <RepeatButton Visibility="Collapsed"/>
                            </Track.IncreaseRepeatButton>
                            <Track.Thumb>
                                <Thumb Background="{StaticResource NeonCyan}" Opacity="0.7"/>
                            </Track.Thumb>
                        </Track>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="Orientation" Value="Vertical">
                            <Setter TargetName="PART_Track" Property="IsDirectionReversed" Value="False"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="ScrollViewer">
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
    </Style>

</ResourceDictionary>




