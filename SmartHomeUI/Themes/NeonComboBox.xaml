<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Accent resources -->
    <Color x:Key="NeonComboAccentColor">#12E6D9</Color>
    <SolidColorBrush x:Key="NeonComboAccentBrush" Color="#12E6D9"/>
    <SolidColorBrush x:Key="NeonComboTextBrush" Color="#EFFFFD"/>
    <SolidColorBrush x:Key="NeonComboOverlayBrush" Color="#3312E6D9"/>
    <SolidColorBrush x:Key="NeonComboPopupBackground" Color="#1A0A0F14"/>
    <DropShadowEffect x:Key="NeonComboPopupGlow"
                      Color="#12E6D9"
                      BlurRadius="8"
                      ShadowDepth="0"
                      Opacity="0.8"/>

    <!-- ScrollBar styling for the popup -->
    <Style x:Key="NeonComboScrollBarStyle" TargetType="ScrollBar">
        <Setter Property="Width" Value="6"/>
        <Setter Property="Height" Value="6"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource NeonComboAccentBrush}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ScrollBar">
                    <Grid Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                        <Track x:Name="PART_Track"
                                   Orientation="{TemplateBinding Orientation}"
                                   Focusable="False"
                                   IsDirectionReversed="True">
                            <Track.DecreaseRepeatButton>
                                <RepeatButton Command="{x:Static ScrollBar.LineUpCommand}"
                                              Background="Transparent"
                                              BorderThickness="0"
                                              IsTabStop="False"/>
                            </Track.DecreaseRepeatButton>
                            <Track.IncreaseRepeatButton>
                                <RepeatButton Command="{x:Static ScrollBar.LineDownCommand}"
                                              Background="Transparent"
                                              BorderThickness="0"
                                              IsTabStop="False"/>
                            </Track.IncreaseRepeatButton>
                            <Track.Thumb>
                                <Thumb Background="{StaticResource NeonComboAccentBrush}"
                                       Width="6">
                                    <Thumb.Template>
                                        <ControlTemplate TargetType="Thumb">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="3"/>
                                        </ControlTemplate>
                                    </Thumb.Template>
                                </Thumb>
                            </Track.Thumb>
                        </Track>
                        </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="Orientation" Value="Horizontal">
                <Setter Property="Height" Value="6"/>
                <Setter Property="Width" Value="Auto"/>
            </Trigger>
            <Trigger Property="Orientation" Value="Vertical">
                <Setter Property="Width" Value="6"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ComboBox Item template -->
    <Style TargetType="ComboBoxItem">
        <Setter Property="Foreground" Value="{StaticResource NeonComboTextBrush}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="Height" Value="36"/>
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBoxItem">
                    <Border x:Name="ItemRoot"
                            Background="Transparent"
                            SnapsToDevicePixels="True">
                        <Grid>
                            <Rectangle x:Name="SelectedIndicator"
                                       Width="2"
                                       Fill="{StaticResource NeonComboAccentBrush}"
                                       HorizontalAlignment="Left"
                                       Visibility="Collapsed"/>
                            <Border x:Name="HoverOverlay"
                                    Background="{StaticResource NeonComboOverlayBrush}"
                                    Opacity="0"
                                    Margin="2,0,2,0"
                                    CornerRadius="8"/>
                            <Grid Margin="12,0,12,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ContentPresenter x:Name="contentPresenter"
                                                  Grid.Column="0"
                                                  Margin="0"
                                                  VerticalAlignment="Center"
                                                  RecognizesAccessKey="True"
                                                  Content="{TemplateBinding Content}"
                                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                                  ContentStringFormat="{TemplateBinding ContentStringFormat}"
                                                  TextElement.Foreground="{StaticResource NeonComboTextBrush}">
                                    <ContentPresenter.Resources>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                        </Style>
                                    </ContentPresenter.Resources>
                                </ContentPresenter>
                                <Path x:Name="CheckGlyph"
                                      Grid.Column="1"
                                      Margin="12,0,0,0"
                                      Data="M2,6 L5,9 L11,3"
                                      Stretch="None"
                                      Stroke="{StaticResource NeonComboAccentBrush}"
                                      StrokeThickness="2"
                                      StrokeEndLineCap="Round"
                                      StrokeStartLineCap="Round"
                                      Visibility="Collapsed"/>
                            </Grid>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="HoverOverlay" Property="Opacity" Value="0.08"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="SelectedIndicator" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="contentPresenter" Property="TextElement.FontWeight" Value="SemiBold"/>
                            <Setter TargetName="CheckGlyph" Property="Visibility" Value="Visible"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="ItemRoot" Property="Opacity" Value="0.45"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ComboBox style -->
    <Style TargetType="ComboBox">
        <Setter Property="Focusable" Value="True"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="MinHeight" Value="36"/>
        <Setter Property="Padding" Value="12,6,12,6"/>
        <Setter Property="Foreground" Value="{StaticResource NeonComboTextBrush}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{StaticResource NeonComboAccentBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="ScrollViewer.CanContentScroll" Value="False"/>
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <StackPanel/>
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid x:Name="Root"
                          Background="Transparent"
                          SnapsToDevicePixels="True">
                        <ToggleButton x:Name="ToggleButton"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      Focusable="False"
                                      HorizontalContentAlignment="Stretch"
                                      VerticalContentAlignment="Stretch"
                                      IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}">
                            <ToggleButton.Template>
                                <ControlTemplate TargetType="ToggleButton">
                                    <Border x:Name="MainBorder"
                                            Background="Transparent"
                                            BorderBrush="{Binding BorderBrush, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                            BorderThickness="{Binding BorderThickness, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                            CornerRadius="10"
                                            SnapsToDevicePixels="True">
                                        <Border.Effect>
                                            <DropShadowEffect Color="#12E6D9"
                                                              BlurRadius="8"
                                                              ShadowDepth="0"
                                                              Opacity="0.8"/>
                                        </Border.Effect>
                                        <Grid Margin="{Binding Padding, RelativeSource={RelativeSource AncestorType=ComboBox}}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <ContentPresenter x:Name="ContentSite"
                                                              Grid.Column="0"
                                                              Margin="0,0,18,0"
                                                              VerticalAlignment="Center"
                                                              HorizontalAlignment="Stretch"
                                                              RecognizesAccessKey="True"
                                                              Content="{Binding SelectionBoxItem, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                                              ContentTemplate="{Binding SelectionBoxItemTemplate, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                                              ContentTemplateSelector="{Binding ItemTemplateSelector, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                                              ContentStringFormat="{Binding SelectionBoxItemStringFormat, RelativeSource={RelativeSource AncestorType=ComboBox}}">
                                                <ContentPresenter.Resources>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                                        <Setter Property="Foreground" Value="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ComboBox}}"/>
                                                    </Style>
                                                </ContentPresenter.Resources>
                                            </ContentPresenter>
                                            <Grid Grid.Column="1"
                                                  HorizontalAlignment="Right"
                                                  VerticalAlignment="Stretch">
                                                <Path x:Name="Chevron"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      Width="10"
                                                      Height="10"
                                                      Stretch="Uniform"
                                                      Stroke="{StaticResource NeonComboAccentBrush}"
                                                      StrokeThickness="2"
                                                      StrokeStartLineCap="Round"
                                                      StrokeEndLineCap="Round"
                                                      Margin="0,0,6,0"
                                                      Data="M 0 0 L 5 5 L 10 0"
                                                      RenderTransformOrigin="0.5,0.5">
                                                    <Path.RenderTransform>
                                                        <RotateTransform Angle="0"/>
                                                    </Path.RenderTransform>
                                                </Path>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="MainBorder" Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect Color="#12E6D9"
                                                                      BlurRadius="10"
                                                                      ShadowDepth="0"
                                                                      Opacity="0.95"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="Chevron" Property="RenderTransform">
                                                <Setter.Value>
                                                    <RotateTransform Angle="180"/>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter TargetName="MainBorder" Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect Color="#12E6D9"
                                                                      BlurRadius="10"
                                                                      ShadowDepth="0"
                                                                      Opacity="0.95"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                        <DataTrigger Binding="{Binding IsKeyboardFocusWithin, RelativeSource={RelativeSource AncestorType=ComboBox}}" Value="True">
                                            <Setter TargetName="MainBorder" Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect Color="#12E6D9"
                                                                      BlurRadius="10"
                                                                      ShadowDepth="0"
                                                                      Opacity="0.95"/>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter TargetName="MainBorder" Property="Opacity" Value="0.45"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </ToggleButton.Template>
                        </ToggleButton>

                        <Popup x:Name="PART_Popup"
                               AllowsTransparency="True"
                               PlacementTarget="{Binding ElementName=ToggleButton}"
                               Placement="Bottom"
                               Margin="0"
                               MinWidth="{Binding ActualWidth, ElementName=ToggleButton}"
                               IsOpen="{TemplateBinding IsDropDownOpen}"
                               PopupAnimation="Fade"
                               Focusable="False">
                            <Grid SnapsToDevicePixels="True" Background="Transparent">
                                <Border x:Name="PopupBorder"
                                        Background="{StaticResource NeonComboPopupBackground}"
                                        BorderBrush="{StaticResource NeonComboAccentBrush}"
                                        BorderThickness="1.5"
                                        CornerRadius="10"
                                        Padding="8"
                                        Effect="{StaticResource NeonComboPopupGlow}">
                                    <ScrollViewer x:Name="DropDownScrollViewer"
                                                  Focusable="False"
                                                  CanContentScroll="False"
                                                  HorizontalScrollBarVisibility="Disabled"
                                                  VerticalScrollBarVisibility="Auto"
                                                  MaxHeight="300">
                                        <ScrollViewer.Resources>
                                            <Style TargetType="ScrollBar" BasedOn="{StaticResource NeonComboScrollBarStyle}"/>
                                        </ScrollViewer.Resources>
                                        <ItemsPresenter Margin="0"
                                                        KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Grid>
                        </Popup>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Root" Property="Opacity" Value="0.45"/>
                            <Setter Property="IsHitTestVisible" Value="False"/>
                            <Setter TargetName="ToggleButton" Property="IsEnabled" Value="False"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>


